<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="@string/wortLbl"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/wortTemp2"
        app:layout_constraintStart_toStartOf="@+id/wortTemp2" />

    <TextView
        android:id="@+id/res2"
        android:layout_width="323dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/wortTemp2"
        android:layout_width="150dp"
        android:layout_height="77dp"
        android:ems="10"
        android:textSize="72sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/roomTemp2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/roomTemp2"
        android:layout_width="150dp"
        android:layout_height="77dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:textSize="72sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/wortTemp2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="@string/roomLbl"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/roomTemp2"
        app:layout_constraintStart_toStartOf="@+id/roomTemp2" />

</androidx.constraintlayout.widget.ConstraintLayout>